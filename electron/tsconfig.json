{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "../build/electron",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "../",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "./**/*.ts"
    ]
}
